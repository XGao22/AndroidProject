<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tjkcht.shenyangapp.oneActivity" >
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!--重新获取产品信息按钮-->
        <Button
            android:id="@+id/regainProductInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="40dp"
            android:text="查询"
            android:onClick="regainProductInfo"
            android:background="@drawable/comm_button_selector"
            android:textStyle="bold" />

        <!--提交按钮-->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:text="提交"
            android:onClick="submit"
            android:background="@drawable/comm_button_selector"
            android:textStyle="bold" />

        <!--水平分隔符-->
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="#33B0F3"/>
        <!--RFID标签-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="RFID标签"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--产品唯一标识-->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="产品唯一标识"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--产品编码-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="产品编码"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--产品名称-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="产品名称"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--计划/上线-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="计划/上线"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--扫描条码-->
        <!--<Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="扫描条码"
            android:background="@drawable/comm_button_selector"
            android:textStyle="bold" />-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="物料条码"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--扫描标签-->
        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/divider3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/textView"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@android:color/black" />
        <!--产品唯一标识-->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_toEndOf="@+id/textView1"
            android:background="@drawable/textview_border"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <!--产品编码-->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toEndOf="@+id/textView2"
            android:background="@drawable/textview_border"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <!--产品名称-->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toEndOf="@+id/textView3"
            android:background="@drawable/textview_border"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <!--计划/上线-->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toEndOf="@+id/textView4"
            android:background="@drawable/textview_border"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <!--扫描条码-->
        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/textView5"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@android:color/black" />
        <!--<ListView-->
        <!--android:id="@+id/lv_barCode"-->
        <!--android:layout_width="138dp"-->
        <!--android:layout_height="197dp"-->
        <!--android:layout_above="@+id/ll_menu"-->
        <!--android:layout_below="@+id/editText3"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginStart="16dp"-->
        <!--android:layout_marginEnd="16dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:layout_marginBottom="6dp" />-->
        <!--物料编码表-->
        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText3"
            android:layout_marginTop="8dp"
            android:background="#A7A5A5"/>

        <!--调用外部控件的布局list_item布局。#85CAF3-->
        <include
            android:id="@+id/table_title"
            layout="@layout/bar_code_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="1dp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1.5dip"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/table_title"
            android:background="#686867" />

        <ListView
            android:id="@+id/list"
            android:layout_width="408dp"
            android:layout_height="206dp"
            android:layout_below="@+id/divider5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="73dp"
            android:background="@drawable/listview_bg"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#B4B3B3"
            android:dividerHeight="1.0dip"
            android:fadingEdge="none"
            android:scrollbars="none"></ListView>
    </RelativeLayout>
    <!--开启服务。关闭服务-->
    <LinearLayout
        android:id="@+id/ll_servicemanage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rfPower"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="28dp"
                android:text="RFID功率："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_rfPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="18" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_openservice"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#4D4DFF"
            android:onClick="openservice"
            android:text="开启服务"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_closeservice"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:background="#A8A8A8"
            android:onClick="closeservice"
            android:text="关闭服务"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#B2B2B2" >
        <TextView
            android:onClick="checkRFID"
            android:id="@+id/checkRFID"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:hint="清点标签"
            android:textColor="#FF0000"
            android:textSize="23sp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/scanBarCode"
            android:onClick="scanBarCode"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:hint="扫描条码"
            android:textColor="#FF0000"
            android:textSize="23sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:onClick="servicemanage"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:hint="服务管理"
            android:textColor="#FF0000"
            android:textSize="23sp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout>